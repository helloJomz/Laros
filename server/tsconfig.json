{
  "compilerOptions": {
    "target": "ES2020", // Modern ECMAScript version for async/await and other features
    "module": "commonjs", // CommonJS module system for Node.js
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Root directory of your TypeScript source files
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Ensure compatibility with ES6 modules
    "skipLibCheck": true, // Skip type checking of declaration files for faster build times
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "resolveJsonModule": true, // Allow importing JSON files as modules
    "noImplicitAny": true, // Raise error on expressions with implicit `any` type
    "moduleResolution": "node", // Module resolution strategy
    "baseUrl": ".", // Base directory for module resolution
    "paths": {
      "*": ["node_modules/*"]
    },
    "sourceMap": true, // Generate source maps for debugging
    "declaration": true // Generate declaration files (.d.ts)
  },
  "include": [
    "src/**/*" // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules directory
    "dist", // Exclude compiled output directory
    "**/*.spec.ts" // Optionally exclude test files if not needed in production
  ]
}
